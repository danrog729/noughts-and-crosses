<Window x:Class="noughts_and_crosses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:noughts_and_crosses"
        mc:Ignorable="d"
        Title="MainWindow" Width="1000" Height="1000">
    <Image Name="Viewport" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"
           SizeChanged="ViewportSizeChanged"
           MouseWheel="ViewportZoom"
           MouseMove="ViewportMouseMove"/>
</Window>
