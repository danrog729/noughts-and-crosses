<Window x:Class="noughts_and_crosses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:noughts_and_crosses"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid Background="Black">
        <TextBlock Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,5,5">Rotation</TextBlock>
        <TextBox Name="degreesX" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,30,5,5" TextChanged="NewDegrees">0</TextBox>
        <TextBox Name="degreesY" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,55,5,5" TextChanged="NewDegrees">0</TextBox>
        <TextBox Name="degreesZ" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,80,5,5" TextChanged="NewDegrees">0</TextBox>
        <Viewbox Stretch="Uniform">
            <Canvas Width="1000" Height="1000" Name="MainCanvas">
                <Image Name="Viewport" Width="750" Height="750" Margin="125"
                       SizeChanged="ViewportSizeChanged"
                       MouseWheel="ViewportZoom"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
