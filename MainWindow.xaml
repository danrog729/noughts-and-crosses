<Window x:Class="noughts_and_crosses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:noughts_and_crosses"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid Background="Black">
        <TextBox Name="degreesX" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" TextChanged="NewDegrees">0</TextBox>
        <TextBox Name="degreesY" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,30,5,5" TextChanged="NewDegrees">0</TextBox>
        <TextBox Name="degreesZ" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,55,5,5" TextChanged="NewDegrees">0</TextBox>
        <Viewbox Stretch="Uniform">
            <Canvas Width="1000" Height="1000">
                <Border Width="752" Height="752" Margin="124" BorderBrush="White" BorderThickness="1">
                    <Image Name="Viewport"/>
                </Border>
                <Ellipse Width="850" Height="850" Stroke="White" StrokeThickness="5" Margin="75"/>
                <Ellipse Width="862.5" Height="862.5" Stroke="Gray" StrokeThickness="2" StrokeDashArray="4, 4" Margin="68.75"/>
                <Ellipse Width="900" Height="900" Stroke="White" StrokeThickness="15" Margin="50"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
